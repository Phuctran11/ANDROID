<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Light theme with explicit CalendarView styling -->
    <style name="Base.Theme.Bai2_Register" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:textColorPrimary">#000000</item>
        <item name="android:textColorSecondary">#757575</item>

        <!-- CalendarView specific attributes -->
        <item name="android:calendarViewStyle">@style/CalendarViewCustom</item>
    </style>

    <style name="Theme.Bai2_Register" parent="Base.Theme.Bai2_Register" />

    <!-- Custom CalendarView style -->
    <style name="CalendarViewCustom" parent="@android:style/Widget.DeviceDefault.CalendarView">
        <item name="android:background">@android:color/white</item>
        <item name="android:focusedMonthDateColor">#000000</item>
        <item name="android:unfocusedMonthDateColor">#9E9E9E</item>
        <item name="android:weekNumberColor">#000000</item>
        <item name="android:weekSeparatorLineColor">#E0E0E0</item>
        <item name="android:selectedWeekBackgroundColor">#BBDEFB</item>
    </style>
</resources>