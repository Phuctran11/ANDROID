<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:padding="8dp">

    <!-- Vòng tròn chứa chữ cái đầu -->
    <TextView
        android:id="@+id/tvInitial"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:background="@drawable/circle_background"
        android:gravity="center"
        android:text="E"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <!-- Tên người gửi -->
    <TextView
        android:id="@+id/tvSenderName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/tvInitial"
        android:layout_marginStart="8dp"
        android:text="Sender Name"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"/>

    <!-- Thời gian -->
    <TextView
        android:id="@+id/tvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:text="12:34 PM"
        android:textSize="12sp"
        android:textColor="#888888"/>

    <!-- Chủ đề email -->
    <TextView
        android:id="@+id/tvSubject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvSenderName"
        android:layout_toEndOf="@id/tvInitial"
        android:layout_marginStart="8dp"
        android:text="Subject"
        android:textSize="14sp"
        android:textStyle="bold"
        android:maxLines="1"
        android:ellipsize="end"/>

    <!-- Đoạn trích nội dung -->
    <TextView
        android:id="@+id/tvSnippet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvSubject"
        android:layout_toEndOf="@id/tvInitial"
        android:layout_marginStart="8dp"
        android:text="Snippet preview of email content"
        android:textSize="12sp"
        android:textColor="#666666"
        android:maxLines="1"
        android:ellipsize="end"/>

    <!-- Nút sao (star) -->
    <ImageButton
        android:id="@+id/btnStar"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_star_outline"
        android:contentDescription="Star"/>
</RelativeLayout>
