<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Tiền tệ đầu vào. Để mặc định đầu vào là VND -->
    <TextView
        android:id="@+id/tvCurrency1"
        android:text="@string/vnd"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#222222"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/etAmount1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="36sp"
        android:inputType="numberDecimal"
        android:hint="@string/_0"
        android:background="@drawable/edittext_background"
        android:padding="12dp"
        android:textColor="#000000"
        android:layout_marginBottom="12dp" />

    <Spinner
        android:id="@+id/spinnerCurrency1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:spinnerMode="dropdown"
        android:layout_marginBottom="24dp" />

    <!-- Tiền tệ đầu ra. Để mặc định đầu ra là Euro-->
    <TextView
        android:id="@+id/tvCurrency2"
        android:text="@string/euro"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#222222"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/etAmount2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="36sp"
        android:inputType="numberDecimal"
        android:hint="@string/_0"
        android:background="@drawable/edittext_background"
        android:padding="12dp"
        android:textColor="#000000"
        android:layout_marginBottom="12dp" />

    <Spinner
        android:id="@+id/spinnerCurrency2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:spinnerMode="dropdown" />

</LinearLayout>
