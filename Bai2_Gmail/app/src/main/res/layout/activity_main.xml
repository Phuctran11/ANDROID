<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Toolbar màu đỏ -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/design_default_color_error"
        android:titleTextColor="@android:color/white"
        app:navigationIcon="@drawable/ic_menu"
        app:titleCentered="false"
        app:popupTheme="@style/ThemeOverlay.MaterialComponents.Light">

        <!-- Container ngang để chứa tiêu đề và ô tìm kiếm -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Tiêu đề -->
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Inbox"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Ô tìm kiếm (ẩn theo mặc định) -->
            <EditText
                android:id="@+id/etSearch"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:hint="Tìm kiếm"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:background="@android:color/transparent"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:visibility="gone"
                android:singleLine="true"
                android:inputType="text"
                android:imeOptions="actionSearch"
                android:focusable="true"
                android:focusableInTouchMode="true" />
        </LinearLayout>

        <!-- Nút tìm kiếm (ở cuối toolbar) -->
        <ImageView
            android:id="@+id/ivSearch"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/search_icon"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="16dp"
            android:contentDescription="Search" />

    </com.google.android.material.appbar.MaterialToolbar>

    <!-- RecyclerView danh sách email -->

    <!-- Nút soạn thư nổi -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvEmails"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"
        android:clipToPadding="false"
        android:paddingTop="8dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabCompose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:contentDescription="Compose"
        android:src="@drawable/ic_edit"
        app:layout_anchor="@id/rvEmails"
        app:layout_anchorGravity="bottom|end"
        app:tint="@android:color/white"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
